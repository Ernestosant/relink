---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="ReLink - Acortador de URLs con estadísticas" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <header class="w-full py-4 px-6 bg-white shadow-sm flex justify-between items-center">
      <div class="flex items-center gap-2">
        <a href="/" class="text-2xl font-bold text-indigo-600">ReLink</a>
      </div>
      <nav>
        <ul class="flex gap-4">
          <li><a href="/" class="text-gray-600 hover:text-indigo-600">Inicio</a></li>
          <li><a href="/stats" class="text-gray-600 hover:text-indigo-600">Estadísticas</a></li>
        </ul>
      </nav>
    </header>
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="mt-auto py-6 text-center text-gray-500 text-sm">
      <p>&copy; {new Date().getFullYear()} ReLink. Todos los derechos reservados.</p>
    </footer>
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
</style> 